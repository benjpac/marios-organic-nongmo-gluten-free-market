<h1><%= @product.name %></h1>
<h4><strong>Cost: $</strong><%= @product.cost %></h4>
<h4><strong>Country of Origin: </strong><%= @product.country %></h4>

<p><%= link_to 'Update Product', edit_product_path(@product) %></p>
<p><%= link_to 'Delete Product', product_path(@product), :data => { :confirm => 'You sure?', :method => 'delete' }%></p>


<% @product.reviews.each do |review| %>
<p><strong><%= review.rating %> stars</strong></p>
<p><%= review.author %> on <%= review.created_at %>
<p><%= review.content_body %></p>
<% end %>
